<div class="card">
    
    <div class="card-header sep25">
        <h2>{{t "listadoPropiedades" }}</h2>
        <div role="group" class="boton_anadir_propiedad">
        {{#link-to "admin.clients.new" data-toggle="tooltip" title="Añadir propiedad" class="btn bgm-cyan btn-circulo btn-float waves-effect" }} 
         <i class="fa fa-plus"></i><i class="md md-add"></i>
        {{/link-to}}  

{{!--             <a href="editar_propiedad" data-toggle="tooltip" title="Añadir propiedad" class="btn bgm-cyan btn-circulo btn-float waves-effect">
            <i class="fa fa-plus"></i><i class="md md-add"></i></a> --}}
        </div>
    </div>
    
    <div class="card-body card-padding">

        <table id="data-table-command" class="tabla_propiedades table table-striped table-vmiddle">
            <thead>
                <tr>
                    <th data-column-id="id" data-type="text" data-order="desc">Ref</th>
                    <th data-column-id="destacado">Destacado</th>
                    <th data-column-id="localidad">Localidad</th>
                    <th data-column-id="zona">Zona</th>
                    <th data-column-id="tipo">Tipo</th>
                    <th data-column-id="precio">Precio</th>
                    <th data-column-id="hab">Hab</th>
                    <th data-column-id="visible">Visible</th>
                    <th data-column-id="commands" data-formatter="commands" data-sortable="false">Acciones</th>
                </tr>
            </thead>
            <tbody>

          {{#each model as |item|}} 
            <tr >
              <td>{{ item.titleEn }}</td>
              <td>{{t item.destacado }}</td>
              <td>{{ item.localidad }}</td>
              <td>{{ item.zonaDireccion }}</td>
              <td>{{ item.tTipoPropiedad }}</td>
              <td>{{ item.precioVenta }}</td>
              <td>{{ item.numHabitaciones }}</td>
              <td>{{t item.visible }}</td>
              <td>
              <button type="button" class="btn btn-icon command-edit btn_editar_inicio" {{action "editProperty" item }} data-id_propiedad="1">
              <i class="md md-edit"><i class="fa fa-pencil"></i></i>
              </button>
              <button type="button" class="btn btn-icon command-edit btn_editar_inicio" {{action "editProperty" item }} data-id_propiedad="1">
              <i class="md md-edit"><i class="fa fa-trash"></i></i>
              </button>
              </td>
            </tr>
          {{/each}} 

            </tbody>
        </table>
    </div>

</div>