{{#if isActive}}
<div role="tabpanel" class="tab-pane active" id="general">
  <div class="row">
    <div class="col-sm-12">
      {{#if hasChanged}}
        {{#if hasErrors}}
          {{!-- <div class="pull-left">{{t "prompts.fixErrors" }}</div>   --}}
          {{else}}
          <button type="submit" class="pull-left btn btn-primary btn-sm m-b-10 waves-effect" {{action "savePropertyResource"}}>
            {{t "save"}}
          </button>
        {{/if}}
      {{/if}}
    </div>
    <div class="col-sm-4">
      
      <div class="thumbnail">
        <img src="img/300x200.gif" alt="">
        <div class="caption">
          <h4>REK-1040 - <span class="precio">325.000â‚¬</span> </h4>
          <p>Apartamento San Miguel de Salinas.</p>
          <p class="iconos_grande">
            <i class="fa fa-bed"></i> <span>2</span>&nbsp;&nbsp;&nbsp;&nbsp;
            <i class="fa fa-male"></i><i class="fa fa-female"></i> 
            <span>1<span>&nbsp;&nbsp;&nbsp;
            <i class="fa fa-arrows"></i> <span>25m<sup>2</sup></span>
            </span>
            </span>
          </p>
        </div>
      </div>
      <div>
        <h4>{{t "propertyGeneralSections.visibility" }}</h4>


        {{#each visibilityInputFields as |inputField|}} 
          <div class="form-group fg-float">
            {{partial "partials/input-field-resolver" }}
          </div>
        {{/each}}
      </div>

    </div>
    <div class="col-sm-4">
      <h4>{{t "propertyGeneralSections.generalData" }}</h4>


      {{#each mainInputFields as |inputField|}} 
        <div class="form-group fg-float">
          {{partial "partials/input-field-resolver" }}
        </div>
      {{/each}}

      <br>


      <h4>{{t "propertyGeneralSections.seasonalRental" }}</h4>
      <div id="toggle_temporadas">

      {{#each alquilerDeTemporadaInputFields as |inputField|}} 
        <div class="form-group fg-float">
          {{partial "partials/input-field-resolver" }}
        </div>
      {{/each}}



      </div>
    </div>
    <div class="col-sm-4">
      <h4>{{t "propertyGeneralSections.characteristics" }}</h4>


        {{#each characteristicasInputFields as |inputField|}} 
          <div class="form-group fg-float">
            {{partial "partials/input-field-resolver" }}
          </div>
        {{/each}}


      <br>
      <h4>{{t "propertyGeneralSections.portals" }}</h4>

      {{#each portalesInputFields as |inputField|}} 
        <div class="form-group fg-float">
          {{partial "partials/input-field-resolver" }}
        </div>
      {{/each}}

    </div>
  </div>
</div>
{{/if}}
