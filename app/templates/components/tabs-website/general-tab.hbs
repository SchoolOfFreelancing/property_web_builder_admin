<div role="tabpanel" class="tab-pane">
  <div class="row">
    {{partial "partials/manage-changes-buttons" }}

    <div class="col-sm-6">
      <h4>{{t "logo"}}</h4> 
      {{#if logoPhoto}}
      <table id="tabla_fotos" cellspacing="0">
        <tr data-id_foto="1" id="1" class="foto_principal">
          <td>
            <div class="thumbnail">
              <img src={{ logoPhoto.image.url }} alt="">
            </div>
            <div class="hidden-xs">{{ logoPhoto.image.url }}</div>
          </td>
          <td class="text-left">

          <button type="button" class="btn btn-icon command-edit btn-edfile" >
            <span class="md md-edit">
              {{#upload/x-droplet-edit url=editPhotoEndpoint didUploadAction="refreshPhotos"}} 

              {{/upload/x-droplet-edit}}
            </span>
          </button>

          </td>
        </tr>
      </table>
      {{else}}
        <p><a class="btn btn-edfile">{{t "addLogo"}}
           {{#upload/x-droplet-upload-single url=addPhotoEndpoint addPhotosFromUrlsAction="addPhotosFromUrls" didUploadAction="refreshPhotos"}} {{/upload/x-droplet-upload-single}}
        </a></p>
      {{/if}}

      <br>

      <h4>Colores</h4>
      <div class="form-group fg-float">
        <div class="fg-line has- fg-toggled">
          <input type="color" class="input-sm form-control fg-input" value="#ff6166">
        </div>
        <label class="fg-label">Color principal</label>
      </div>
      <div class="form-group fg-float">
        <div class="fg-line has- fg-toggled">
          <input type="color" class="input-sm form-control fg-input" value="#f29910">
        </div>
        <label class="fg-label">Color secundario</label>
      </div>

    </div>
    <div class="col-sm-6">
      {{#each socialNetworkFields as |fieldDetails|}} 

        {{forms/social-input resetTrigger=resetTrigger valueChangedAction="checkDirtyState" fieldDetails=fieldDetails resourceObject=resourceObject}}
      {{/each}}
    </div>
  </div>
</div>
