{{#if isActive}}
<div role="tabpanel" class="tab-pane" id="situacion">
  <div class="row">

    {{partial "partials/manage-changes-buttons" }}

     <div class="col-sm-4">
      <h4>{{t "propertyGeneralSections.sale" }}</h4>
      <div id="toggle_temporadas">
      {{#each saleInputFields as |inputField|}} 
        <div class="form-group fg-float">
          {{partial "partials/input-field-resolver" }}
        </div>
      {{/each}}        
      </div>
    </div>

    <div class="col-sm-4">
      <h4>{{t "propertyGeneralSections.longtermRental" }}</h4>
      <div id="toggle_temporadas">
      {{#each longTermRentalInputFields as |inputField|}} 
        <div class="form-group fg-float">
          {{partial "partials/input-field-resolver" }}
        </div>
      {{/each}}
      </div>
    </div>

    <div class="col-sm-4">
      <h4>{{t "propertyGeneralSections.seasonalRental" }}</h4>
      <div id="toggle_temporadas">
      {{#each shortTermRentalInputFields as |inputField|}} 
        <div class="form-group fg-float">
          {{partial "partials/input-field-resolver" }}
        </div>
      {{/each}}
      </div>
    </div>

  </div>
</div>
{{/if}}
