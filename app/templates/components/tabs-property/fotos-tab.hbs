{{#if isActive}}
<div role="tabpanel" class="tab-pane" id="descripcion">
  <div class="row">

        <p><a class="btn btn-edfile">{{t "addPhotos"}}
            {{#upload/x-droplet url=addPhotoEndpoint addPhotosFromUrlsAction="addPhotosFromUrls" didUploadAction="refreshPhotos"}} 
            {{/upload/x-droplet}}
        </a></p>

    <div class="col-sm-12">
    </div>
  </div>
  <div class="row">
    <table id="tabla_fotos" cellspacing="0">
    {{#each resourceObject.photoModels as |photo| }}
      <tr data-id_foto="1" id="1" class="foto_principal">
        <td>
          <div class="thumbnail">
            <img src={{ photo.image.url }} alt="">
          </div>
        </td>
        <td class="" style="display:none;">{{ photo.image.url }}</td>
        <td class="text-left">
          <button type="button" class="btn btn-icon command-delete" {{action "deletePhoto" photo }}>
            <span class="md md-delete"></span>
          </button>
        </td>
      </tr>
    {{/each}}

    </table>
  </div>
</div>
{{/if}}
